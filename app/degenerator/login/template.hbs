<div class="app-login">
  <div class="hero__login">
    <div class="center">
      <div class="container__login">
        <div class="left__login">
            <h2 class="login__title">login</h2>
            {{input class="input__login" type="text" placeholder="email" value=email}}
            {{input class="input__login" type="password" placeholder="password" value=password}}
            <div class="btn-box__login">
            <button class="login-btn">login</button>
          </div>
        </div>
        <div class="right__login">
          <h2 class="member__login">not a member yet? <br>sign up now and <br>you can start <br>degenerating!</h2>
          <button class="register-btn">register</button>
        </div>
      </div>
    </div>
  </div>
</div>
{{outlet}}
